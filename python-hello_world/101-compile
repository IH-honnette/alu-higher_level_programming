#!/bin/bash

# Check if PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
  echo "Error: PYFILE environment variable is not set."
  exit 1
fi

# Compile the Python file into a .pyc file
python3 -m py_compile "$PYFILE"

# Create the output filename with 'c' appended
output_filename="${PYFILE}c"

# Rename the compiled file
mv "${PYFILE}c" "$output_filename"

echo "Compiling main.py ..."
exit 0
